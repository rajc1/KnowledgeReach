<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/get_projects_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".dummy.ClassRooms.GetProjects">

    <ImageView
        android:id="@+id/project_image_activity"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/cost_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/project_image_activity"
        android:text="C2C"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/cost_activity"
        android:layout_marginRight="8dp"
        android:id="@+id/remaining_text"
        android:text="Remaining" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/project_image_activity"
        android:layout_below="@+id/remaining_text"

        android:layout_margin="8dp"
        android:text="Total"
        android:id="@+id/total_activity"
        android:textSize="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/total_activity"
        android:layout_marginRight="8dp"
        android:id="@+id/total_text"
        android:text="total" />

    <include
        android:id="@+id/grade2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/payment_link_activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        layout="@layout/two_grade"></include>

    <TextView
        android:id="@+id/project_name_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_image_activity"
        android:layout_margin="8dp"
        android:text="Project Name"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/project_state_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_name_activity"
        android:layout_margin="8dp"
        android:text="State"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/project_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_state_activity"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/payment_link_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_desc"
        android:layout_margin="8dp"
        android:text="Payment Link :" />

    <TextView
        android:id="@+id/payment_link_activity"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/payment_link_text"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:autoLink="web"
        android:text="PaymentLink" />


</RelativeLayout>